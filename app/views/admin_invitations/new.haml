= stylesheet_link_tag "/../javascripts/fancybox/jquery.fancybox-1.3.1"
.span-12.last
  .modal_title_bar
    %h4 Send invitation 

  = form_for Admin.new, :url => admin_invitation_path(Admin) do |invite|
    %p
      = invite.label :email
      = invite.text_field :email
    Message:
    = invite.text_area :invite_messages

    %p= invite.submit "Send an invitation"

